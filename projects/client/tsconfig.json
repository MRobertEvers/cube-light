{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"module": "CommonJS",
		"jsx": "preserve",
		"esModuleInterop": true,
		"target": "ES6",
		"lib": ["DOM", "WebWorker"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src", "custom.d.ts"],
	"exclude": ["node_modules"]
}
