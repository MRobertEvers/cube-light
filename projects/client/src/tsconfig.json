{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "ES3",
    "lib": [
      "DOM"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "custom.d.ts",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
